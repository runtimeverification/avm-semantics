declareTealSource "./tests/teal-sources/min-balance-app-closeout.teal";
declareTealSource "./tests/teal-sources/clear-basic.teal";

addAccount <address> b"1" </address> <balance> 100000 </balance>;
addAccount <address> b"2" </address> <balance> 100000 </balance>;

#initTxGroup();

// Add app and opt in b"1"
addAppCallTx <txID> 0 </txID>
             <sender>            b"1"        </sender>
             <applicationID>     NoTValue    </applicationID>
             <onCompletion>      @ OptIn     </onCompletion>
             <accounts>          .TValueList </accounts>
             <applicationArgs>   .TValueList </applicationArgs>
             <foreignApps>       .TValueList </foreignApps>
             <foreignAssets>     .TValueList </foreignAssets>
             <globalNui>         4           </globalNui>
             <globalNbs>         5           </globalNbs>
             <localNui>          6           </localNui>
             <localNbs>          7           </localNbs>
             <extraProgramPages> 3           </extraProgramPages>
             <approvalPgmIdx>    0           </approvalPgmIdx>
             <clearStatePgmIdx>  1           </clearStatePgmIdx>;

// Opt in b"2"
addAppCallTx <txID> 1 </txID>
             <sender>            b"2"        </sender>
             <applicationID>     0           </applicationID>
             <onCompletion>      @ OptIn     </onCompletion>
             <accounts>          .TValueList </accounts>
             <applicationArgs>   .TValueList </applicationArgs>
             <foreignApps>       .TValueList </foreignApps>
             <foreignAssets>     .TValueList </foreignAssets>
             <globalNui>         0           </globalNui>
             <globalNbs>         0           </globalNbs>
             <localNui>          0           </localNui>
             <localNbs>          0           </localNbs>
             <extraProgramPages> 0           </extraProgramPages>
             <approvalPgmIdx>    0           </approvalPgmIdx>
             <clearStatePgmIdx>  1           </clearStatePgmIdx>;

// Clear state
addAppCallTx <txID> 2 </txID>
             <sender>            b"2"         </sender>
             <applicationID>     0            </applicationID>
             <onCompletion>      @ CloseOut </onCompletion>
             <accounts>          .TValueList  </accounts>
             <applicationArgs>   .TValueList  </applicationArgs>
             <foreignApps>       .TValueList  </foreignApps>
             <foreignAssets>     .TValueList  </foreignAssets>
             <globalNui>         0            </globalNui>
             <globalNbs>         0            </globalNbs>
             <localNui>          0            </localNui>
             <localNbs>          0            </localNbs>
             <extraProgramPages> 0            </extraProgramPages>
             <approvalPgmIdx>    0            </approvalPgmIdx>
             <clearStatePgmIdx>  1            </clearStatePgmIdx>;

// Call test code from b"2"
addAppCallTx <txID> 3 </txID>
             <sender>            b"2"        </sender>
             <applicationID>     0           </applicationID>
             <onCompletion>      @ NoOp      </onCompletion>
             <accounts>          .TValueList </accounts>
             <applicationArgs>   .TValueList </applicationArgs>
             <foreignApps>       .TValueList </foreignApps>
             <foreignAssets>     .TValueList </foreignAssets>
             <globalNui>         0           </globalNui>
             <globalNbs>         0           </globalNbs>
             <localNui>          0           </localNui>
             <localNbs>          0           </localNbs>
             <extraProgramPages> 0           </extraProgramPages>
             <approvalPgmIdx>    0           </approvalPgmIdx>
             <clearStatePgmIdx>  1           </clearStatePgmIdx>;

#initGlobals(); #evalTxGroup(); .AS
